@model Real_Estate_Services.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
	Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<link href="~/css/login-signup.css" rel="stylesheet" />

<div class="container" style="margin-top: 80px;">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="form-container">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="header">
                        <h1 class="fs-4">Reset Your Password</h1>
                        <p class="fs-6" style="margin-top: -22px;">Enter your current and new credentials below</p>
                    </div>
                    <div>
                        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to Home
                        </a>
                    </div>
                </div>

                <div class="divider">Password Reset Form</div>

                @* Show any TempData messages *@
                <h4 class="text-success text-center">@TempData["SuccessMessage"]</h4>
                <h4 class="text-danger text-center">@TempData["AccountError"]</h4>

                <form asp-action="ForgotPassword" asp-controller="Users" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Identifier (Username or Email) -->
                    <div class="mb-4">
                        <label asp-for="Identifier" class="form-label">Username or Email</label>
                        <div class="input-group">
                            <input asp-for="Identifier" class="form-control" placeholder="Username or Email" />
                            <span class="icon"><i class="fas fa-user"></i></span>
                        </div>
                        <span asp-validation-for="Identifier" class="text-danger"></span>
                    </div>

                    <!-- Old Password -->
                    <div class="mb-4">
                        <label asp-for="OldPassword" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="OldPassword" type="password" class="form-control" placeholder="Current Password" />
                            <span class="icon password-toggle"><i class="fas fa-eye"></i></span>
                        </div>
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>

                    <!-- New Password -->
                    <div class="mb-4">
                        <label asp-for="NewPassword" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="NewPassword" type="password" class="form-control" placeholder="New Password" />
                            <span class="icon password-toggle"><i class="fas fa-eye"></i></span>
                        </div>
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>

                    <!-- Confirm New Password -->
                    <div class="mb-4">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm New Password" />
                            <span class="icon password-toggle"><i class="fas fa-eye"></i></span>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-key me-2"></i>Change Password
                        </button>
                    </div>
                </form>

                <div class="login-link mt-3 text-center">
                    Remembered your password? <a asp-action="Login" asp-controller="Users">Sign In</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        // Password toggle on all three password fields
        document.querySelectorAll('.password-toggle').forEach(toggle => {
            toggle.addEventListener('click', () => {
                const input = toggle.closest('.input-group').querySelector('input');
                const type = input.type === 'password' ? 'text' : 'password';
                input.type = type;
                toggle.querySelector('i').classList.toggle('fa-eye');
                toggle.querySelector('i').classList.toggle('fa-eye-slash');
            });
        });
    </script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
